<script defer src="/js/client.js"></script>

<div class="addClient">
  <form name="addClient" action="/clients/new" method="POST">
    <div class="input-field col s4">
      <input placeholder="Title" id="title" type="text" class="validate" name="name">
      <label for="title">name</label>
    </div>
    <div class="input-field col s6">
      <input placeholder="Text" id="Text" type="text" class="validate" name="lastName">
      <label for="Text">lastName</label>
    </div>
    <div class="input-field col s6">
      <input placeholder="Text" id="Text" type="text" class="validate" name="fatherland">
      <label for="Text">fatherland</label>
    </div>
    <div class="input-field col s6">
      <input placeholder="Text" id="Text" type="text" class="validate" name="address">
      <label for="Text">address</label>
    </div>
    <div class="input-field col s6">
      <input placeholder="Text" id="Text" type="text" class="validate" name="phone">
      <label for="Text">phone</label>
    </div>
    <div class="input-field col s6">
      <input placeholder="Text" id="Text" type="text" class="validate" name="email">
      <label for="Text">email</label>
    </div>
  
      <input  name="user_id" type="hidden" value="{{user}}" >
      
    
    <button class="btn waves-effect waves-light" type="submit" name="action">
      Submit
    </button>
  </form>
</div>



<table class="responsive-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>You can</th>
    </tr>
  </thead>
  <tbody>
    <div  >
      {{#each client}}
        <tr data-id="{{this.id}}">
        <td><a href="/clients/{{this.id}}">{{this.name}}</a></td>
        <td>{{this.phone}}</td>
        <td>{{this.email}}</td>
        <td><button>Delite</button>
        <button>Update</button></td>
      </tr>
      
      {{/each}}
      
    </div>

  </tbody>

</table>
