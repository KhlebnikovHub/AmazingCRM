<div id="helloUser">
  {{#if user}}
  <div class="container">
    <div class="row">
      <div class="col l6 s12">
        <h1>Добро пожаловать,
          UserName
        </h1>
      </div>
      <div class="col l6 s12">
        <h1>Photo
          {{user.photo}}
        </h1>
      </div>
    </div>
  </div>
</div>
{{/if}}

<div id="statOrders">
  {{#each allStatus}}
  <div class="row">
    <div class="col s12 m4">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">{{this.status}}</span>
          <p>1</p>
        </div>
        <div class="card-action">
          <a href="#">Подробнее</a>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>
