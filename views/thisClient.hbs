<script defer src="/js/commentClient.js"></script>

{{#each thisclient}}
<h2>Карточка клиента:</h2>
<table class="simple-little-table">
  <thead class="tableTr">
    <tr>
      <td class="th">Имя:</td>
      <td class="th">{{this.name}} {{this.lastName}}</td>
    </tr>
    <tr>
      <td class="th">Компания:</td>
      <td class="th">{{this.fatherland}}</td>
    </tr>
    <tr>
      <td class="th">Адрес:</td>
      <td class="th">{{this.address}}</td>
    </tr>
    <tr>
      <td class="th">Телефон:</td>
      <td class="th">{{this.phone}}</td>
    </tr>
    <tr>
      <td class="th">Email:</td>
      <td class="th">{{this.email}}</td>
    </tr>
    <tr>
      <td class="th">Создал:</td>
      <td class="th">{{this.User.firstName}} {{this.User.lastName}}<br>{{this.User.email}}</td>
    </tr>
  </thead>
</table>
{{/each}}

<div class="addComment">
  <form name="addComment" data-id="{{id}}" action="/clients" method="POST">
    <div class="input-field col s4">
      <input placeholder="Title" id="title" type="text" class="validate" name="comment">
      <label for="title">Твой комментарий</label>
    </div>
    <input name="user_id" type="hidden" value="{{user}}">
    <button class="btn waves-effect waves-light" type="submit" name="action">
      Submit
    </button>
  </form>
</div>


<h2 style="text-align:center">Комментарии к заказу</h2>
<table class="simple-little-table table">
  <thead>
    <tr>
      <th>Текст</th>
      <th>Инициалы комментирующего</th>
      <th>Почта комментирующего</th>
      <th>Дата</th>
      <th>You can</th>

    </tr>
  </thead>
  <tbody>
    {{#each allComment }}
    <tr data-id="{{this.id}}">
      <td>{{this.comment}}</td>
      <td>{{this.User.firstName}} {{this.User.lastName}}</td>
      <td>{{this.User.email}}</td>
      <td>{{this.date}}</td>
      <td> <a href="/clients/{{this.id}}/del">Delite</a>
        <a href="/clients/{{this.id}}/up">Update</a>
      </td>
    </tr>
    </tr>
    {{/each}}
  </tbody>

</table>
